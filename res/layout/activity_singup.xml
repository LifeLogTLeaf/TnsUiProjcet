<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background_grey_white"
    android:gravity="center"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/tree2"
        android:tint="@color/icon_orange" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:paddingBottom="20dp"
        android:text="Sing Up"
        android:textColor="@color/icon_orange"
        android:textSize="30sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/shape_grey_join"
        android:orientation="vertical" >

        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@null"
            android:hint="email"
            android:padding="5dp" />
        <!-- android:textSize="22sp" /> -->

    </LinearLayout>

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/shape_grey_join"
        android:orientation="vertical" >

        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@null"
            android:hint="password"
            android:padding="5dp" />
        <!-- android:textSize="22sp" /> -->

    </LinearLayout>

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/shape_grey_join"
        android:orientation="vertical" >

        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@null"
            android:hint="password check"
            android:padding="5dp" />
        <!-- android:textSize="22sp" /> -->

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:paddingTop="20dp" >

        <TextView
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:background="@drawable/shape_orange_btn"
            android:gravity="center"
            android:text="회원가입"
            android:textColor="@color/background_grey_white"
            android:textSize="15sp" />

        <TextView
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:background="@drawable/shape_orange_btn"
            android:gravity="center"
            android:text="취소"
            android:textColor="@color/background_grey_white"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>